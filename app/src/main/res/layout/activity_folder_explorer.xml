<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCurrentFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Folder Name"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFolders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvCurrentFolder"
        android:layout_above="@+id/btnNavigateUp"/>

    <Button
        android:id="@+id/btnNavigateUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate Up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
